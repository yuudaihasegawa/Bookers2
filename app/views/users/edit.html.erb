<h2>User info</h2>

<% if @user.errors.any? %>
  <div class="error_explanation">
  <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_for(@user) do |f| %>
	<div class="form-group has-icon">
	  <label class="control-label" for="inputName">Name</label>
      <%= f.text_field :name, autofocus:true, autocomplete:"名前" %>
    </div>
    <div class="form-group has-icon">
      <label class="control-label" for="inputProfile_image">Image</label>
      <%= f.attachment_field :profile_image,placeholder: "プロフィール画像" %>
    </div>
    <div class="form-group has-icon">
	  <div class="control-label" for="inputIntroduction">Introduction</div>
	  <%= f.text_area :introduction ,class:"introduction" %>
	</div>

    <%= f.submit "Update User" %>
<% end %>