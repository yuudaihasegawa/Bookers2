<% if flash[:notice] %>
  <div class="flash">
  	<%= flash[:notice] %>
  </div>
<% end %>
<div class="col-xs-3">
  <%= render 'books/list', book: @book_new, user: @user %>
</div>
<div class="col-xs-9">
	<h1>Books</h1>
	  <table class="table table-hover table-inverse">
	  	<thead>
	  		<tr>
	  			<th></th>
	  			<th>Title</th>
	  			<th>Opinion</th>
	  		</tr>
	  	</thead>
	  	<tbody>
	  		<% @user.books.each do |book| %>
	  		<tr>
	  			<td>
	  			  <%= link_to book_path(book.id) do %>
		            <%= attachment_image_tag book.user, :profile_image,fallback:"no_image.jpg",size:"40x40" %>
		          <% end %>
		        </td>
	  			<td><%= link_to "#{book.title}",book_path(book.id) %></td>
	  			<td><%= book.body %></td>
	  		</tr>
	  		<% end %>
	  	</tbody>
	  </table>
</div>